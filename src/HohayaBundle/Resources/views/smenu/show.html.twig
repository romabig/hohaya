{% extends 'backend.template.html.twig' %}

{% block stylesheet %}
    {{ parent()}}
    <link href="{{ asset('bundles/hohaya/admin/plugins/datatables/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css"/>

{% endblock %}

{% block title %}{% endblock %}

{% block content %}
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h1 class="box-title">
                    Détails des informations
                </h1>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">

                <div class="row">
                    <div class="col-sm-12">
                        <div class="table-responsive">
                            <table id="smenu" class="table table-bordered table-striped">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ sMenu.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Titre</th>
                                        <td>{{ sMenu.titre }}</td>
                                    </tr>
                                    <tr>
                                        <th>Route</th>
                                        <td>{{ sMenu.route }}</td>
                                    </tr>
                                    <tr>
                                        <th>Menu</th>
                                        <td>{{ sMenu.menu.titre }}</td>
                                    </tr>
                                    <tr>
                                        <th>Position</th>
                                        <td>{{ sMenu.ordreAffichage }}</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-offset-4 col-sm-8">
                        <a href="{{ path('smenu_index')}}">
                            <input type="button" class="btn btn-warning btn-sm" value="Retour à la liste" name="">
                        </a>
                        <a href="{{ path('smenu_new')}}">
                            <input type="button" class="btn btn-success btn-sm" value="Ajouter" name="">
                        </a>
                        <a href="{{ path('smenu_new', {'id':sMenu.id})}}">
                            <input type="button" class="btn btn-info btn-sm" value="Modifier" name="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <!-- <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script> -->
    <script src="{{ asset('bundles/hohaya/admin/plugins/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/hohaya/admin/plugins/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            $('#smenu').DataTable();
        });
    </script>
{% endblock %}