{% extends 'backend.template.html.twig' %}

{% block stylesheet %}
    {{ parent()}}
    <link href="{{ asset('bundles/hohaya/admin/plugins/datatables/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css"/>

{% endblock %}

{% block title %}{% endblock %}

{% block content %}
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h1 class="box-title">
                    Détails des informations
                </h1>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-4">
                        <div align="center">
                            <img src="{% if publication.nomImage %}{{ asset('uploads/Images/Publications/pub_' ~ publication.id ~ '/' ~ publication.nomImage) }}{% else %}{{ asset('uploads/Images/logo-communique.jpeg') }}{% endif %}" height="150px" width="150px" class="img-circle" alt="Actualite image">
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="table-responsive">
                            <table id="publication" class="table table-bordered table-striped">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ publication.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Titre</th>
                                        <td>{{ publication.titre }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ publication.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Image</th>
                                        <td>{{ publication.nomImage }}</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-offset-4 col-sm-8">
                        <a href="{{ path('publication_index')}}">
                            <input type="button" class="btn btn-warning btn-sm" value="Retour à la liste" name="">
                        </a>
                        <a href="{{ path('publication_new')}}">
                            <input type="button" class="btn btn-success btn-sm" value="Ajouter" name="">
                        </a>
                        <a href="{{ path('publication_new', {'id':publication.id})}}">
                            <input type="button" class="btn btn-info btn-sm" value="Modifier" name="">
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <!-- <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script> -->
    <script src="{{ asset('bundles/hohaya/admin/plugins/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/hohaya/admin/plugins/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            $('#publication').DataTable();
        });
    </script>
{% endblock %}