{% extends 'backend.template.html.twig' %}

{% block stylesheet %}
    {{ parent()}}
    <link href="{{ asset('bundles/hohaya/admin/plugins/datatables/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css"/>

{% endblock %}

{% block title %}{% endblock %}

{% block content %}
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h1 class="box-title">
                    Liste des menus
                </h1>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">

                <div class="table-responsive">
                    <table id="menu" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Route</th>
                                <th>Position</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for menu in menus %}
                                <tr>
                                    <td>
                                        <a href="{{ path('menu_show', { 'id': menu.id }) }}">{{ menu.id }}</a>
                                    </td>
                                    <td>{{ menu.titre }}</td>
                                    <td>{{ menu.route }}</td>
                                    <td>{{ menu.ordreAffichage }}</td>
                                    <td style="text-align:center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success btn-xs dropdown-toggle" data-toggle="dropdown">
                                                Actions
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                                <li>
                                                    <a href="{{ path('menu_show', { 'id': menu.id }) }}">Afficher</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('menu_new', {'id': menu.id }) }}">Modifier</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('menu_delete', {'id': menu.id }) }}">Supprimer</a>
                                                </li>
                                            </ul>
                                        </div>

                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <!-- <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script> -->
    <script src="{{ asset('bundles/hohaya/admin/plugins/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/hohaya/admin/plugins/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            $('#menu').DataTable();
        });
    </script>
{% endblock %}